$('document').ready(function(){
  //the opponent's pokemon attacks
  $( '#poo' ).on( 'click', function() {
    $( '#pooke' ).html('<img src="/assets/bulbasaur/bulba_bounce.gif" alt=""><audio src="/assets/audios/menusound.wav" autoplay="autoplay"></audio><audio src="/assets/audios/tackle.wav" autoplay="autoplay"></audio>');
    setTimeout(function(){
      $( '#otherpoke' ).html( '<img src="/assets/bulbasaur/bulba_back_blink.gif" alt=""> ');
      var pookehealth = $('#pookehealthbar');
      pookehealth.val(pookehealth.val() - 15);
    }, 700);
  });

  //our pokemon attacks and does
  $( '#poo3' ).on( 'click', function() {
    $( '#otherpoke' ).html( '<img src="/assets/bulbasaur/bulba_tackle2.gif" alt=""><audio src="/assets/audios/menusound.wav" autoplay="autoplay"></audio>');

    setTimeout(function(){
      $( '#pooke' ).html( '<img src="/assets/bulbasaur/bulba_blink.gif" alt=""> ');
      var otherhealth = $('#otherhealthbar');
      otherhealth.val(otherhealth.val() - 15);
    }, 500);
  });

  var musics = ['pokemusic.mp3', 'pokemusic2.mp3']
  var randomSong = musics[Math.floor(Math.random()*musics.length)];

  $('#music').html('<audio src="/assets/audios/' + randomSong + '" loop="loop" autoplay="autoplay" controls="controls"></audio>')
});
